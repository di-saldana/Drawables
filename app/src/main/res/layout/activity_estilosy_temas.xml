<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstilosyTemas">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

    <TextView
        android:id="@+id/usoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uso de Estilos y Temas"
        android:textColor="@color/black"
        android:textAlignment="center"
        style="@style/EstiloTitulo"/>

    <TextView
        android:id="@+id/porTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicación desarrollada por: Dianelys Saldaña"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/botonVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="Volver"
        style="@style/EstiloBoton"/>

    </LinearLayout>
</RelativeLayout>