<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EjemploHilos">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvCrono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TV Crono"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:text="Thread"
            android:layout_below="@id/tvCrono"/>

        <Button
            android:id="@+id/asyncTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:text="Async Task"
            android:layout_below="@id/thread"/>

        <Button
            android:id="@+id/corrutinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:text="Corrutinas"
            android:layout_below="@id/asyncTask"/>

    </LinearLayout>
</RelativeLayout>